<header class="header">
  <nav class="navbar navbar-light bg-light">
    <%= link_to "InstagramClone", pictures_path,class:"main_logo" %>
    <ul class="nav justify-content-end align-items-center">  
      <% if logged_in? %>
        <li >
          <%= link_to image_tag("new_post.png",class:"icon_img"), new_picture_path %>
        </li>
        <li>
          <%= link_to image_tag("profile.png",class:"icon_img"), user_path(current_user.id) %>
        </li>
        <li >
          <%= link_to image_tag("logout.png",class:"icon_img"), session_path(current_user.id), method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_path,class:"btn btn-outline-secondary btn-sm" %>
        </li>
        <li >
          <%= link_to "ログイン", new_session_path,class:"btn btn-outline-secondary btn-sm" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>